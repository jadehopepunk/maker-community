<div class="admin-people-show">
  <div class="breadcrumbs">
    <a class="breadcrumb return" href="<%= admin_people_path %>">â†© People</a>
  </div>
  <h1 class="page-title"><%= @person.display_name %></h1>
  <% if policy([:admin, @person]).show_personal_information? %>
  <div class="callout person-details">
    <div class="detail">
      <div class="title">Address</div>
      <div class="value"><%= render partial: 'admin/people/address', locals: { address: @person.address } %></div>
    </div>
    <div class="detail">
      <div class="title">Phone</div>
      <div class="value"><%= @person.phone %></div>
    </div>
  </div>
  <% end %> <%= render partial: 'admin/people/events_timeline', locals: { person: @person, events: @person.events } %>
</div>
