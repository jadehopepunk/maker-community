<div class="admin-layout-edit">
  <h2>Edit Roles</h2>

  <%= simple_form_for @person, url: update_roles_admin_person_path(@person) do |f| %>
  <div>
    <div><%= f.association :roles, as: :check_boxes, collection: Role.appointed.all %></div>
  </div>
  <div class="form-actions"><%= f.button :submit %></div>
  <% end %>
</div>
