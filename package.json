{
  "name": "app",
  "private": "true",
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "esbuild": "^0.14.14",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-nesting": "^10.1.2"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds",
    "build:css": "postcss ./app/assets/stylesheets/application.postcss.css -o ./app/assets/builds/application.css"
  }
}
